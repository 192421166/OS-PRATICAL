#include <stdio.h>

int main() {
    int n, i, time = 0, completed = 0;
    int bt[10], rt[10], pr[10], wt[10], tat[10], done[10] = {0};

    printf("Enter number of processes: ");
    scanf("%d", &n);

    for (i = 0; i < n; i++) {
        printf("Burst Time & Priority for P%d: ", i+1);
        scanf("%d%d", &bt[i], &pr[i]);
        rt[i] = bt[i];
    }

    while (completed < n) {
        int idx = -1, min_pr = 9999;
        for (i = 0; i < n; i++) {
            if (rt[i] > 0 && pr[i] < min_pr) {
                min_pr = pr[i];
                idx = i;
            }
        }

        rt[idx]--;
        time++;

        if (rt[idx] == 0) {
            completed++;
            tat[idx] = time;
            wt[idx] = tat[idx] - bt[idx];
        }
    }

    printf("Process\tBT\tPR\tWT\tTAT\n");
    for (i = 0; i < n; i++)
        printf("P%d\t%d\t%d\t%d\t%d\n", i+1, bt[i], pr[i], wt[i], tat[i]);

    return 0;
}
